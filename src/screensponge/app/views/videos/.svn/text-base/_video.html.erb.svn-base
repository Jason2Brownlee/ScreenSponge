<% 
if is_owner?(video.show)
	bg="background:#FFFFCC;"
end
%>

<div style="padding-bottom:0.3em;padding-top:0.3em;">
 <div style="border:1px solid #d5d5d5;padding: 5px 5px 5px 5px;<%=bg %>">
	<div>
		<%= link_to "Trailer", video.entry %>
	</div>
	<div style="font-size:80%;">
		<b><%= link_to video.show.user.humanized_name, video.show.user %></b> |
		<% if is_owner?(video.show) %>
			<%= link_to "Edit", edit_user_show_video_path(current_user, video.show, video) %> |
		<% end %>
		<%= time_distance_or_time_stamp video.created_at %>
	</div>
 </div>
</div>