<% title "#{@show.full_name} | Description" %>
<h2><%= link_to @show.full_name, [@user,@show] %> | Description</h2>
<br/>

<% form_for([current_user, @show, @plot]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :entry %><br />
    <%= f.text_area :entry %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Delete', [@user, @show, @plot], :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'Back to show', user_show_path(@user, @show) %>
