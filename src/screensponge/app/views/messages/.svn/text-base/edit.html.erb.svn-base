<% title "#{@show.full_name} | Message" %>
<h2><%= link_to @show.full_name, [@user,@show] %> | Message</h2>
<br/>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :entry %><br />
    <%= f.text_area :entry %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @message %> |
<%= link_to 'Back', messages_path %>
