<%dom_request_id = dom_id(user) + dom_id(show) %><% content_for :stylesheet do %><style type="text/css">    .request-module {        padding-top: 1em;        padding-left: 3em;        /*visibility:hidden;*/    }</style><% end %><span class="request-button" style="font-size:90%">	<a href="#" id="toggleRequestButton-<%=dom_request_id%>" onclick="return false;" name="toggleRequestButton">REQUEST</a></span><div id="request-module-<%=dom_request_id%>" class="request-module">    <% form_tag user_show_requests_path(user, show), :method => :post do %>    <%= text_area_tag :request_message, nil, :size => "60x4", :id => "request_message-#{dom_request_id}" %>    <br/>    <div align="left">        <%= submit_tag "Send Request" %>        <a href="#" id="cancel-<%=dom_request_id%>">Cancel</a>    </div>    <% end %></div><script type="text/javascript">    YAHOO.util.Event.onDOMReady(function(){        initQuickRequest('<%=dom_request_id%>')    });</script>